{
  "name": "honeymelon",
  "version": "0.0.1",
  "description": "A beautiful, simple, and powerful media converter for macOS Apple Silicon",
  "author": "Jerome Thayananthajothy <tjthavarshan@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/honeymelon-app/honeymelon",
  "repository": {
    "type": "git",
    "url": "https://github.com/honeymelon-app/honeymelon.git"
  },
  "bugs": {
    "url": "https://github.com/honeymelon-app/honeymelon/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build --target aarch64-apple-darwin",
    "remove:emojis": "node scripts/remove-emojis.js",
    "remove:emojis:dry": "node scripts/remove-emojis.js --dry-run",
    "remove:emojis:src": "node scripts/remove-emojis.js --include \"^/src/\"",
    "version:update": "node scripts/update-version.js",
    "download-ffmpeg": "bash scripts/download-ffmpeg.sh",
    "postinstall": "bash scripts/download-ffmpeg.sh || echo 'FFmpeg download skipped (optional)'",
    "lint": "npm run lint:js && npm run lint:rust",
    "lint:js": "eslint . --ext .js,.ts,.vue,.mjs,.cjs",
    "lint:js:fix": "eslint . --ext .js,.ts,.vue,.mjs,.cjs --fix",
    "lint:rust": "cd src-tauri && cargo clippy --all-targets --all-features -- -D warnings",
    "lint:fix": "npm run lint:js:fix && npm run format:rust",
    "format": "npm run format:js && npm run format:rust",
    "format:js": "prettier --write \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:rust": "cd src-tauri && cargo fmt --all",
    "format:check": "npm run format:check:js && npm run format:check:rust",
    "format:check:js": "prettier --check \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check:rust": "cd src-tauri && cargo fmt --all -- --check",
    "type-check": "vue-tsc --noEmit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test -c e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test -c e2e/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test -c e2e/playwright.config.ts --debug",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/vue-table": "^8.21.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-notification": "^2.3.3",
    "@tauri-apps/plugin-opener": "^2",
    "@unovis/ts": "^1.6.1",
    "@unovis/vue": "^1.6.1",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^14.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-vue": "^8.6.0",
    "lucide-vue-next": "^0.547.0",
    "pinia": "^3.0.3",
    "reka-ui": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "vaul-vue": "^0.4.1",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.13",
    "vue-i18n": "^10.0.8",
    "vue-sonner": "^2.0.9",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.33.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitepress": "^2.0.0-alpha.12",
    "vitest": "^4.0.5",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.1.10"
  }
}
