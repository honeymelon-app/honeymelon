{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Honeymelon",
  "version": "0.0.1",
  "identifier": "com.honeymelon.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Honeymelon",
        "label": "main",
        "width": 700,
        "height": 750,
        "minWidth": 700,
        "minHeight": 750,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "center": true,
        "focus": true,
        "transparent": false,
        "visible": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "acceptFirstMouse": true,
        "tabbingIdentifier": null,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": true,
      "capabilities": ["default"],
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["bin/ffmpeg", "bin/ffprobe"],
    "category": "public.app-category.productivity",
    "copyright": "Copyright Â© 2025 Honeymelon",
    "shortDescription": "Media converter with remux-first FFmpeg workflow for Apple Silicon",
    "longDescription": "Professional media converter for macOS Apple Silicon with intelligent remux-first FFmpeg workflow. Supports H.264, HEVC, VP9, AV1, and more. Optimized for M1, M2, M3, and M4 chips.",
    "macOS": {
      "minimumSystemVersion": "13.0",
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true,
      "infoPlist": "Info.plist",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "fileAssociations": [
      {
        "ext": ["mp4", "m4v", "mov", "mkv", "webm", "avi"],
        "name": "Video File",
        "role": "Editor",
        "mimeType": "video/*"
      },
      {
        "ext": ["mp3", "m4a", "aac", "flac", "wav", "ogg", "opus"],
        "name": "Audio File",
        "role": "Editor",
        "mimeType": "audio/*"
      },
      {
        "ext": ["png", "jpg", "jpeg", "gif", "webp"],
        "name": "Image File",
        "role": "Editor",
        "mimeType": "image/*"
      }
    ]
  },
  "plugins": {}
}
