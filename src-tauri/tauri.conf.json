{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Honeymelon",
  "version": "1.0.0",
  "identifier": "com.honeymelon.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Honeymelon",
        "label": "main",
        "width": 700,
        "height": 700,
        "minWidth": 700,
        "minHeight": 700,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "center": true,
        "focus": true,
        "transparent": false,
        "visible": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "acceptFirstMouse": true,
        "tabbingIdentifier": null
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": true,
      "capabilities": ["default"],
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/bin/ffmpeg", "resources/bin/ffprobe"],
    "category": "public.app-category.productivity",
    "copyright": "Copyright  2025 Honeymelon",
    "shortDescription": "Media converter with remux-first FFmpeg workflow",
    "longDescription": "Professional media converter for macOS with intelligent remux-first FFmpeg workflow. Supports H.264, HEVC, VP9, AV1, and more.",
    "macOS": {
      "minimumSystemVersion": "13.0",
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    }
  }
}
