<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime Security -->
    <!-- Disable JIT compilation (not needed for this app) -->
    <key>com.apple.security.cs.allow-jit</key>
    <false/>

    <!-- Disable unsigned executable memory (security best practice) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>

    <!-- Disable dynamic linker environment variables (security best practice) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <false/>

    <!-- File System Access -->
    <!-- Allow read/write access to user-selected files (drag-drop, file picker) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Process Execution -->
    <!-- Required to spawn FFmpeg/ffprobe child processes -->
    <!-- This disables library validation to allow bundled FFmpeg binaries to run -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
